@@ -0,0 +1,39 @@
+#ifndef NETTY_TCNATIVE_BORINGSSL_COMPAT_H
+#define NETTY_TCNATIVE_BORINGSSL_COMPAT_H
+
+#include <openssl/ssl.h>
+#include <openssl/x509.h>
+
+// ---------------------------------------------------------------------
+// Compatibility shims for older BoringSSL versions (no SSL_CREDENTIAL)
+// ---------------------------------------------------------------------
+
+#ifndef SSL_CREDENTIAL
+typedef struct ssl_credential_st {
+    int unused;
+} SSL_CREDENTIAL;
+#endif
+
+// Accept CRYPTO_BUFFER* (or any pointer) to silence incompatible type errors
+#ifndef SSL_CREDENTIAL_set1_certificate_properties
+static inline int SSL_CREDENTIAL_set1_certificate_properties(SSL_CREDENTIAL *c, void *props) {
+    (void)c; (void)props;
+    return 1; // no-op
+}
+#endif
+
+#ifndef SSL_CREDENTIAL_set_must_match_issuer
+static inline void SSL_CREDENTIAL_set_must_match_issuer(SSL_CREDENTIAL *c, int must_match) {
+    (void)c; (void)must_match;
+}
+#endif
+
+#ifndef SSL_CREDENTIAL_set1_trust_anchor_id
+static inline int SSL_CREDENTIAL_set1_trust_anchor_id(SSL_CREDENTIAL *c, const uint8_t *id, size_t len) {
+    (void)c; (void)id; (void)len;
+    return 1; // no-op
+}
+#endif
+
+#endif // NETTY_TCNATIVE_BORINGSSL_COMPAT_H
+
